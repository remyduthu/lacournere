{
  "private": true,
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.0.3",
    "postcss": "^8.3.11",
    "postcss-cli": "^9.0.2",
    "postcss-import": "^14.0.2",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.7",
    "watch": "^1.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run build && lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,js,html}": "prettier --write"
  },
  "scripts": {
    "build": "postcss styles.css -o static/dist/styles.css",
    "dev": "watch 'yarn run build'"
  }
}
